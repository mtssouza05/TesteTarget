@model List<ProdutoModel>
@{
    ViewData["Title"] = "Lista de produtos";
}

<h1>Listagem de Produtos </h1>

<br />

<div class="d-grip gap-2 d-md-flex justify-content-md-start"> 
    <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Criar">Adicionar Novo Produto</a>
</div>

<br />

<div class="text-center"> 


    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Produto</th>
                <th scope="col">Valor</th>
                <th scope="col">Dísponvel</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @if (Model !=null && Model.Any())
            {
                foreach(ProdutoModel produto in Model)
                
                {

                    <tr>
                        <th scope="row">@produto.Id</th>
                        <td>@produto.Nome</td>
                        <td>@produto.Valor</td>
                        <td>@produto.Disponibilidade</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger " asp-route-id="@produto.Id" asp-controller="Produto" asp-action="Apagar">Apagar</a>
                            </div>

                        </td>
                    </tr>

                }


            }
        </tbody>
    </table>


</div>


